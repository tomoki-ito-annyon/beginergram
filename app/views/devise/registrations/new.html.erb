<div class="main">
  <div class="devise-contants">
    <div class="form-wrap">
      <div class="form-group text-center">
        <h1 class="content-title">Beginergram</h1>
        <p class="text-secondary">友達の写真や動画をチェックしよう</p>
      </div>
      <%= form_with scope: resource, as: resource_name, url: registration_path(resource_name), local: true do |f| %>

        <div class="form-group">
          <%= f.text_field :nickname, autofocus: true, placeholder: "ニックネーム", class: "form-control", size: "60" %>
        </div>

        <div class="form-group">
          <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control", size: "60" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "form-control", size: "60" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワードの確認", class: "form-control", size: "60" %>
        </div>

        <div class="actions">
          <%= f.submit "登録する", class: "btn-primary" %>
        </div>
      <% end %>

      <br>

      <p class="devise-link">
        アカウントをお持ちですか？
        <%= link_to "サインインする", new_user_session_path %>
      </p>
    </div>
  </div>
</div>